from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.naive_bayes import MultinomialNB
from sklearn.model_selection import train_test_split
from sklearn.metrics import accuracy_score, classification_report, confusion_matrix


documents=["Free money, click here now!",
           "This is a great deal, don't mis it",
           "You have won a lottery, claim your prize",
           "I am learning natural language processing",
           "Python programming is amazing for data science",
           "Free vacation offer, click here to claim",
           "I love machine learning and data science",
           "Great savings on shopping, shop now!"]

labels=[0,0,0,1,1,0,1,0]



vectorizer = TfidfVectorizer()


X = vectorizer.fit_transform(documents)


print("TF-IDF Matrix:")
print(X.toarray())
print("Feature Names:",vectorizer.get_feature_names_out())
print("Feature Shape:", vectorizer.get_feature_names_out().shape)







X_train, X_test, y_train, y_test = train_test_split(X, labels, test_size=0.2, random_state=42)
classifier = MultinomialNB()


classifier.fit(X_train, y_train)





y_pred= classifier.predict(X_test)


accuracy = accuracy_score(y_test, y_pred)
print("Accuracy:", accuracy)

print("Predictions:", y_pred)
print("True Labels:", y_test)
print("Classification Report:")
print(classification_report(y_test, y_pred))
